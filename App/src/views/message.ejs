<% if ( message !== 'undefined' ) { %>
    <% var col = "red" %>
    <% if ( message.type == "alert" ) { col = "red" }; %>
    <% if ( message.type == "warn" ) { col = "orange" }; %>
    <% if ( message.type == "info" ) { col = "blue" }; %>
    <% if ( message.type == "success" ) { col = "green" }; %>

    <div class="MessageBox" style="background-color: <%= col %>;"> <%= message.text %> </div>
<% }; %>