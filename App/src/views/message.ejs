<% if ( message !== 'undefined' ) { %>
    <% var sMessageClass = "MessageBoxInfo" %>
    <% if ( message.type == "alert" ) { sMessageClass = "MessageBoxAlert" }; %>
    <% if ( message.type == "warn" ) { sMessageClass = "MessageBoxWarn" }; %>
    <% if ( message.type == "info" ) { sMessageClass = "MessageBoxInfo" }; %>
    <% if ( message.type == "success" ) { sMessageClass = "MessageBoxSuccess" }; %>

    <MessageBox class="<%= sMessageClass %>" > <%= message.text %> </MessageBox>
<% }; %>