<% if ( message !== 'undefined' ) { %>
    <% var col = "red" %>
    <% if ( message.type == "alert" ) { col = "#fd5c63" }; %>
    <% if ( message.type == "warn" ) { col = "#FFC72C" }; %>
    <% if ( message.type == "info" ) { col = "#89CFF0" }; %>
    <% if ( message.type == "success" ) { col = "#7FFFD4" }; %>

    <div class="MessageBox" style="background-color: <%= col %>;"> <%= message.text %> </div>
<% }; %>