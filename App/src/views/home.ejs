<!DOCTYPE html>
<html lang="de">
    <%- include("import.ejs") %>

    <body>
        <div class="Page">
            <div class="PageHead">
                <div class="PageHeadContainer">
                    <h1> <%=translation.app_title%></h1>
                </div>
            </div>
            <div class="PageContent">
                <% if ( loginstatus === true ) { %>
                    <a href="/logout"> 
                        <button class="StandardButton"> 
                            <%= translation.btn_logout %> 
                        </button> 
                    </a>
                <% } %>
                <div class="CategoryContainer">
                    <% if ( loginstatus === true ) { %>
                        <h3>Private Area</h3>
                        <div class="CategoryButtonRow">
                            <a href="/myprofile"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_user_01.png">
                                    <%= translation.btn_myprofile %> 
                                </button> 
                            </a>
                        </div>

                        <h3>Public Area</h3>

                        <div class="CategoryButtonRow">    
                            <a href="/course_overview"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_course_01.png">
                                    <%= translation.btn_coursa_data %> 
                                </button> 
                            </a>
    
                            <a href="/course_mark_average"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_exam_01.png">
                                    <%= translation.btn_course_mark_average %> 
                                </button> 
                            </a>

                            <a href="/location_overview"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_building_02.png">
                                    <%= translation.btn_locations %> 
                                </button> 
                            </a>

                            <a href="/schedule_overview"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_schedule_01.png">
                                    <%= translation.btn_schedule %> 
                                </button> 
                            </a>
                        </div>

                        <h3>Manager Area</h3>
                        <div class="CategoryButtonRow">

                            <a href="/student_overview?page=1"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_hat_02.png">
                                    <%= translation.btn_student_info %> 
                                </button> 
                            </a>

                            <a href="/employee_overview?page=1"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_employee_01.png">
                                    <%= translation.btn_employee_info %> 
                                </button> 
                            </a>
                            
                        </div>

                        <h3>Admin Area</h3>

                        <div class="CategoryButtonRow">
                            <a href="/create_person"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_user_add_01.png">
                                    <%= translation.btn_create_person %> 
                                </button> 
                            </a>

                            <a href="/manage_persons"> 
                                <button class="CategoryButton"> 
                                    <img class="CategoryIconContainer" src="/public/images/icons/uni_manage_01.png">
                                    <%= translation.btn_manage_persons %> 
                                </button> 
                            </a>
                        </div>                        


                    <% } else { %>
                        <a href="/login"> 
                            <button class="StandardButton"> 
                                <%= translation.btn_login %> 
                            </button> 
                        </a>
                    <% } %>

                </div>

            <div>
        </div>
    </body>

</html>