<!DOCTYPE html>
<html lang="de">
    <%- include("import.ejs") %>

    <body>
        <div class="Page">
            <%- include("essentials/page_head.ejs") %>
            <div class="PageContent">
                <% if ( loginstatus === true ) { %>
                    <a href="/logout"> 
                        <button class="StandardButton"> 
                            <%= translation.btn_logout %> 
                        </button> 
                    </a>
                <% } %>
                <div class="CategoryContainer">
                    <% if ( loginstatus === true ) { %>
                        <h3>Your Area</h3>
                        <div class="CategoryButtonRow">
                            <a href="/myprofile"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_user_01.png">
                                    <%= translation.btn_myprofile %> 
                                </button> 
                            </a>
   
                            <a href="/course"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_course_01.png">
                                    <%= translation.btn_coursa_data %> 
                                </button> 
                            </a>
    
                            <a href="/course/show/"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_exam_01.png">
                                    <%= translation.btn_course_mark_average %> 
                                </button> 
                            </a>

                            <a href="/location/overview"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_building_02.png">
                                    <%= translation.btn_locations %> 
                                </button> 
                            </a>

                            <a href="/schedule/overview"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_schedule_01.png">
                                    <%= translation.btn_schedule %> 
                                </button> 
                            </a>
                        </div>

                        <h3>Manager Area</h3>
                        <div class="CategoryButtonRow">

                            <a href="/student?page=1"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_hat_02.png">
                                    <%= translation.btn_student_info %> 
                                </button> 
                            </a>

                            <a href="/employee/overview?page=1"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_employee_01.png">
                                    <%= translation.btn_employee_info %> 
                                </button> 
                            </a>
                            
                        </div>

                        <h3>Admin Area</h3>

                        <div class="CategoryButtonRow">
                            <a href="/person/create"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_user_add_01.png">
                                    <%= translation.btn_create_person %> 
                                </button> 
                            </a>

                            <a href="/person/manage"> 
                                <button class="CategoryButton"> 
                                    <img loading="lazy" class="CategoryIconContainer" src="/public/images/icons/uni_manage_01.png">
                                    <%= translation.btn_manage_persons %> 
                                </button> 
                            </a>
                        </div>                        


                    <% } else { %>
                        <a href="/login"> 
                            <button class="StandardButton"> 
                                <%= translation.btn_login %> 
                            </button> 
                        </a>
                    <% } %>

                </div>
                
            </div>

            <%- include("essentials/page_footer.ejs") %>
        </div>
    </body>

</html>